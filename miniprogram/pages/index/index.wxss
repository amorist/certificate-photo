/* miniprogram/pages/index/index.wxss */
.container {
	background-color: #fff;
	position: relative;
	box-sizing: border-box;
	width: 100vw;
	height: 100vh;
	display: flex;
	flex-direction: column;
}

swiper {
	width: 100%;
	height: 300rpx;
}
swiper-item .swiper-item {
	/* background-color: pink; */
	height: 100%;
}


/* 人像抠图 */
.img-p {
	background-color: #fff;
	position: relative;
	height: 100%;
}
.img-p image {
	width: 100%;
	height: 100%;
}
.img-p .msg {
	position: absolute;
	left: 30rpx;
	bottom: 0rpx;
	/* color: #fff; */
	font-size: 40rpx;
	line-height: 2;
}
.img-p .msg .sub-title {
	font-size: 30rpx;
}

.search-view {
	box-sizing: border-box;
	width: 100%;
	padding: 30rpx;
}
.search-view image {
	width: 100%;
	height: 70rpx;
}

.tip-list {
	padding: 0 30rpx;
	width: 100%;
	display: flex;
	flex-direction: row;
	flex-wrap: nowrap;
	justify-content: space-between;
}
.tip-list .tip-item {
	width: 88rpx;
	height: 160rpx;
	text-align: center;
	font-size: 26rpx;
}

.tip-list .tip-item image {
	width: 88rpx;
	height: 88rpx;
	margin-bottom: 20rpx;
}

.make-view {
	box-sizing: border-box;
	width: 100%;
	padding: 30rpx 30rpx;
	display: flex;
	justify-content: space-between;
}

.make-view image {
	width: 330rpx;
	height: 130rpx;
}


.hot-view {
	box-sizing: border-box;
	width: 100%;
	padding: 0 30rpx;
}
.hot-view image {
	width: 194rpx;
	height: 55rpx;
}

.custom-view {
	box-sizing: border-box;
	width: 100%;
	padding: 20rpx 30rpx;
}
.custom-view image {
	width: 100%;
	height: 130rpx;
}


.hot-list {
	box-sizing: border-box;
	width: 100%;
	padding: 0rpx 30rpx;
}
.hot-list	.hot-list-item {
	box-sizing: border-box;
	width: 100%;
	height: 130rpx;
	padding: 25rpx 40rpx;
	background: #DBEDFC;
	border-radius: 10rpx;
	position: relative;
	margin-bottom: 20rpx;
}
.hot-list ad {
  margin-bottom: 20rpx;
}
.hot-list	.hot-list-item .title {
	font-size: 26rpx;
}
.hot-list	.hot-list-item .description {
	font-size: 24rpx;
	color: #919191;
	margin-top: 20rpx;
}
.hot-list	.hot-list-item image {
	position: absolute;
	width: 60rpx;
	height: 60rpx;
	right: 40rpx;
	top: 36rpx;
}

.ad-view {
	width: 100%;
	box-sizing: border-box;
	padding: 0 30rpx;
}
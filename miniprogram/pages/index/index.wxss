/* miniprogram/pages/index/index.wxss */
.container {
	height: 100vh;
	position: relative;
	box-sizing: border-box;
	padding: 10rpx 30rpx;
	flex-direction: column;
	flex-wrap:wrap;
	justify-content:space-around;
}

swiper {
	width: 100%;
	height: 300rpx;
}
swiper-item .swiper-item {
	/* background-color: pink; */
	height: 100%;
}

/* 帮制作 */
.help-make {
	height: 100%;
	background-color: #fff;
	/* background-image: url('/images/shareShow.jpg'); */
}
.help-make image {
	position: absolute;
	left: 0;
	top: 0;
	width: auto;
	height: 100%;
}
.help-make .title {
	/* font-size: 60rpx; */
	text-align: center;
	padding-left: 220rpx;
	line-height: 1.6;
	/* line-height: 300rpx; */
}
.help-make .title text.sub-title {
	font-size: 40rpx;
	/* line-height: 350rpx; */
}

.img-haochi{
	background-color: #fff;
	position: relative;
	height: 100%;
}
.img-haochi image {
	width: 100%;
	height: 100%;
	/* opacity: 0.6; */
}

.img-haochi .padding-lg {
	position: absolute;
	z-index: 9;
	left: 0;
	top: 0;
	width: 100%;
	text-align: center;
	opacity: 0.8;
}


/* 人像抠图 */
.img-p {
	background-color: #fff;
	position: relative;
	height: 100%;
}
.img-p image {
	width: 100%;
	height: 100%;
}
.img-p .msg {
	position: absolute;
	left: 30rpx;
	bottom: 0rpx;
	/* color: #fff; */
	font-size: 40rpx;
	line-height: 2;
}
.img-p .msg .sub-title {
	font-size: 30rpx;
}

/* 图片转文字 */
.img-text {
	position: relative;
	height: 100%;
}
.img-text image {
	position: absolute;
	height: 100%;
	right: 0;
	top: 0;
}

.container .chooseImage {
	margin-top: 50vh;
	transform: translateY(-100%);
}
.container .temp-image {
	width: 80vw;
}
.container .confirm-view {
	margin-top: 20px;
}
.container .confirm-view button {
	margin: 0 10px;
}
.card-view {
	width: 100%;
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	justify-content: space-between;
	align-items: center;
	flex: 2;
}
.card {
	/* border: 1px solid #06ae56; */
	width: 30%;
	height: 300rpx;
	margin-bottom: 60rpx;
	float: left;
	/* border-radius: 4px; */
	text-align: center;
	font-size: 26rpx;
	display: flex;
	flex-direction:column;
	border: 8rpx solid #fff;
	/* overflow: hidden; */
}
.card .name {
	display: inline-block;
	margin: 0 auto;
	width: 1em;
	font-size: 45rpx;
	/* color: #06ae56; */
	color: #fff;
	line-height: 2;
}

.card:nth-child(1) {
	background-color: rgba(76, 141, 206, 1);
	/* box-shadow: 10rpx 10rpx 10rpx 5rpx rgba(67,142,219,.15); */
}
.card:nth-child(2) {
	background-color: rgba(0,191,243,1);
	/* box-shadow: 10rpx 10rpx 10rpx 5rpx rgba(0,191,243,.15); */
}
.card:nth-child(3) {
	background-color: rgba(255,0,0,1);
	/* box-shadow: 10rpx 10rpx 10rpx 5rpx rgba(255,0,0,.15); */
}

.Promotion {
	width: 100%;
	margin-bottom: 40rpx;
	display: flex;
	flex-direction: row;
	justify-content: space-around;
}

.imageToText {
	background-color: rgba(6,174,86,.1);
	width: 45%;
	height: 100rpx;
	line-height: 96rpx;
	text-align: center;
	font-size: 40rpx;
	border: 2px dashed rgba(6,174,86,.6);
	color: rgba(6,174,86,.6);
}

.chicken-soup {
	background-color: rgba(255,0,0,.1);
	width: 45%;
	height: 100rpx;
	line-height: 96rpx;
	text-align: center;
	font-size: 40rpx;
	border: 2px dashed rgba(255,0,0,.5);
}


.transparent {
	width: 100%;
	height: 0;
	overflow: hidden;
	opacity: 0;
	/* margin-top: 100rpx; */
}

button {
	
	box-shadow: 0 0 10rpx 5rpx rgba(67,142,219,.15);
	font-weight: normal !important;
}
